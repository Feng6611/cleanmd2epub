# API 配置
GEMINI_API_KEY=your_gemini_api_key_here
DOUBAN_API_KEY=your_douban_api_key_here

# 缓存配置
CACHE_ENABLED=true
CACHE_TTL=86400  # 24 小时

# 日志配置
LOG_LEVEL=INFO

# 文本处理配置
MAX_BLOCK_SIZE=1000  # 每个块的最大字符数
MAX_RETRIES=3  # API 调用最大重试次数
RETRY_DELAY=1  # 重试间隔（秒）

# 封面图片配置
COVER_WIDTH=1400  # EPUB 推荐封面宽度
COVER_HEIGHT=2100  # EPUB 推荐封面高度
COVER_FONT=Noto Serif CJK SC
COVER_FONT_SIZE=48
COVER_BACKGROUND=#FFFFFF
COVER_TEXT_COLOR=#000000 